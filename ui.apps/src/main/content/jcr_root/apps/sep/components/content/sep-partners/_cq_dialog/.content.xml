<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Parceiros"
    width="777px"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
    	granite:class="dialog-class-sep-partners"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
			<include-clientlibs 
				jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
				categories="[sep.dialog-styles, sep.partners]"/>
		 	<main 
		 		jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/container"
				margin="{Boolean}true">
				<items jcr:primaryType="nt:unstructured">
					<headingTitle 
						granite:class="att-dialog-heading"
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/heading"
						level="{Long}4" 
						text="Configuração do título" />
					<title 
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldLabel="Título" 
						name="./title"/>
					<headingPartners 
						granite:class="att-dialog-heading"
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/heading"
						level="{Long}4" 
						text="Configuração da lista de parceiros"/>
					<multifield 
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
						composite="{Boolean}true"
						eaem-show-on-collapse="EAEM.showProductName">
						<field 
							granite:class="dialog-class-sep-partnersList"
							jcr:primaryType="nt:unstructured"
							sling:resourceType="granite/ui/components/coral/foundation/container"
							name="./partnersList">
							<items jcr:primaryType="nt:unstructured">
								<column
									granite:class="foundation-layout-util-maximized-alt coral-Form-fieldwrapper"
									jcr:primaryType="nt:unstructured"
									sling:resourceType="granite/ui/components/coral/foundation/container">
									<items jcr:primaryType="nt:unstructured">
										<heading 
											granite:class="att-dialog-heading"
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/heading"
											level="{Long}4" 
											text="Item da lista" />
										<image 
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
											fieldLabel="Imagem" 
											name="./image" 
											required="{Boolean}true"
											rootPath="/content/dam/sep" />
										<link 
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
											fieldLabel="URL do Link" 
											name="./link" 
											rootPath="/content/sep" />
										<alt 
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
											fieldLabel="Texto alternativo da Imagem" 
											name="./alt" />
										<target 
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/select"
											fieldLabel="Abrir ao clicar" 
											name="./target">
											<items jcr:primaryType="nt:unstructured">
												<blank 
													jcr:primaryType="nt:unstructured"
													text="Abrir em uma nova aba" 
													value="_blank"
													selected="{Boolean}true" />
												<self 
													jcr:primaryType="nt:unstructured"
													text="Abrir na mesma aba" 
													value="_self" />
											</items>
										</target>
									</items>
								</column>
							</items>
						</field>
					</multifield>
				</items>
			</main>
        </items>
    </content>
</jcr:root>