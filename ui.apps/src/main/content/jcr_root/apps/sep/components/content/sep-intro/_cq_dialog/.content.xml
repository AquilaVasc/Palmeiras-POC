<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Intro"
    width="777px"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
			<include-clientlibs 
				jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
				categories="sep.dialog-styles"/>
            <container
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                	<tabs
		                jcr:primaryType="nt:unstructured"
		                sling:resourceType="granite/ui/components/coral/foundation/tabs"
		                maximized="{Boolean}true">
		                <items jcr:primaryType="nt:unstructured">
		                	<text
				            	jcr:primaryType="nt:unstructured"
				                jcr:title="Conteúdo"
				                sling:resourceType="granite/ui/components/coral/foundation/container"
		                        margin="{Boolean}true">
		                        <items jcr:primaryType="nt:unstructured">
									<heading
					                	granite:class="att-dialog-heading"
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/heading"
										level="{Long}4" 
										text="Configuração do Conteúdo de Texto"/>
									<title
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldLabel="Título" 
										name="./title"/>
									<subtitle
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldLabel="Subtítulo" 
										required="{Boolean}true"
										name="./subtitle"/>
									<description
										jcr:primaryType="nt:unstructured"
										sling:resourceType="cq/gui/components/authoring/dialog/richtext"
										fieldLabel="Descrição *" 
										name="./description"
										required="{Boolean}true"
										useFixedInlineToolbar="{Boolean}true"
										removeSingleParagraphContainer="{Boolean}true"
										singleParagraphContainerReplacement="div">
										<rtePlugins jcr:primaryType="nt:unstructured"
											sling:resourceSuperType="/apps/sep/components/content/sep-reusable-fields/cq:dialog/content/items/simpleRichtext/rtePlugins"/>
										<uiSettings jcr:primaryType="nt:unstructured"
											sling:resourceSuperType="/apps/sep/components/content/sep-reusable-fields/cq:dialog/content/items/simpleRichtext/uiSettings"/>
									</description>
								</items>
		                	</text>
		                	<image
				            	jcr:primaryType="nt:unstructured"
				                jcr:title="Imagem"
				                sling:resourceType="granite/ui/components/coral/foundation/container"
		                        margin="{Boolean}true">
		                        <items jcr:primaryType="nt:unstructured">
		                        	<position 
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/select"
										fieldLabel="Posição da Imagem" 
										name="./imagePosition">
										<items jcr:primaryType="nt:unstructured">
											<left 
												jcr:primaryType="nt:unstructured"
												text="Esquerda" 
												value="left"
												selected="{Boolean}true"/>
											<right 
												jcr:primaryType="nt:unstructured" 
												text="Direita"
												value="right"/>
										</items>
									</position>
									<heading
					                	granite:class="att-dialog-heading"
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/heading"
										level="{Long}4" 
										text="Configuração da Imagem"/>
									<image 
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
										fieldLabel="Imagem" 
										name="./image" 
										required="{Boolean}true"
										rootPath="/content/dam/sep"/>
									<alt
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldLabel="Texto alternativo da Imagem" 
										name="./imageAlt"/>
								</items>
		                	</image>
		                </items>
		            </tabs>
				</items>
            </container>
        </items>
    </content>
</jcr:root>