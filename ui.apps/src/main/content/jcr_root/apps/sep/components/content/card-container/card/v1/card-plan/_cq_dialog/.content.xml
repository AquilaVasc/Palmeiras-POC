<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="card"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
  					<plans
                    	jcr:primaryType="nt:unstructured"
                    	sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                    	name="./plans"
                    	fieldLabel="Planos">
                    	<items jcr:primaryType="nt:unstructured">
							<bronze
	                    		jcr:primaryType="nt:unstructured"
	                    		text="Bronze"
	                    		value="bronze"/>
	                    	<silver
	                    		jcr:primaryType="nt:unstructured"
	                    		text="Prata"
	                    		value="silver"/>
	                    	<superiorSilver
	                    		jcr:primaryType="nt:unstructured"
	                    		text="Prata Superior"
	                    		value="superior-silver"/>
	                    	<gold
	                    		jcr:primaryType="nt:unstructured"
	                    		text="Ouro"
	                    		value="gold"/>
	                    	<plat
	                    		jcr:primaryType="nt:unstructured"
	                    		text="Platina"
	                    		value="platina"/>
	                    	<diamond
	                    		jcr:primaryType="nt:unstructured"
	                    		text="Diamante"
	                    		value="diamond"/>	
	                    </items>
                    </plans>
                    <linkto
					    jcr:primaryType="nt:unstructured"
					    sling:resourceType="granite/ui/components/foundation/include"
					    path="/apps/sep/components/content/reusablefields/cq:dialog/content/items/linktolink"/>
					<linktoTarget
					    jcr:primaryType="nt:unstructured"
					    sling:resourceType="granite/ui/components/foundation/include"
					    path="/apps/sep/components/content/reusablefields/cq:dialog/content/items/linktotarget"/>
                    <price
					    jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/form/textfield"
						name="./price"
						fieldLabel="PreÃ§o"
						validation="txt-validate">
						<granite:data
							jcr:primaryType="nt:unstructured"
							pattern="number"/>
					</price>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
