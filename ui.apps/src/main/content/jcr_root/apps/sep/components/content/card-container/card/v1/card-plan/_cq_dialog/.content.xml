<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="card"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
  					<plans
                    	jcr:primaryType="nt:unstructured"
                    	sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                    	name="./plans"
                    	fieldLabel="plans.heading">
                    	<items jcr:primaryType="nt:unstructured">
							<bronze
	                    		jcr:primaryType="nt:unstructured"
	                    		text="bronze"
	                    		value="bronze"/>
	                    	<silver
	                    		jcr:primaryType="nt:unstructured"
	                    		text="Prata"
	                    		value="silver"/>
	                    	<superiorSilver
	                    		jcr:primaryType="nt:unstructured"
	                    		text="Prata Superior"
	                    		value="superior-silver"/>
	                    	<gold
	                    		jcr:primaryType="nt:unstructured"
	                    		text="Ouro"
	                    		value="gold"/>
	                    	<plat
	                    		jcr:primaryType="nt:unstructured"
	                    		text="Platina"
	                    		value="platina"/>
	                    	<diamond
	                    		jcr:primaryType="nt:unstructured"
	                    		text="Diamante"
	                    		value="diamond"/>	
	                    </items>
                    </plans>
                    <text
                    	jcr:primaryType="nt:unstructured"
					    sling:resourceType="granite/ui/components/foundation/include"
					    path="/apps/sep/components/content/sep-reusable-fields/cq:dialog/content/items/simpleRichtext"/>
                    <linkto
					    jcr:primaryType="nt:unstructured"
					    sling:resourceType="granite/ui/components/foundation/include"
					    path="/apps/sep/components/content/sep-reusable-fields/cq:dialog/content/items/linktolink"/>
					<linktoTarget
					    jcr:primaryType="nt:unstructured"
					    sling:resourceType="granite/ui/components/foundation/include"
					    path="/apps/sep/components/content/sep-reusable-fields/cq:dialog/content/items/linktotarget"/>
                    <price
					    jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/form/textfield"
						name="./price"
						fieldLabel="price"
						validation="txt-validate">
						<granite:data
							jcr:primaryType="nt:unstructured"
							pattern="number"/>
					</price>
					<descounts 
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<column
								granite:class="foundation-layout-util-maximized-alt coral-Form-fieldwrapper"
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/container">
								<items jcr:primaryType="nt:unstructured">
									<central
									    jcr:primaryType="nt:unstructured"
									    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
									    name="./descountCentral"
									    fieldLabel="Descount Central"
									    min="1"
									    max="100"/>
									<superior
									    jcr:primaryType="nt:unstructured"
									    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
									    name="./descountSuperior"
									    fieldLabel="Descount Superior"
									    min="1"
									    max="100"/>
									<south
									    jcr:primaryType="nt:unstructured"
									    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
									    name="./descountSouth"
									    fieldLabel="Descount South"
									    min="1"
									    max="100"/> 
									<north
									    jcr:primaryType="nt:unstructured"
									    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
									    name="./descountNorth"
									    fieldLabel="Descount North"
									    min="1"
									    max="100"/>
								</items>
							</column>
						</items>
					</descounts>
					<multifield
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
						composite="{Boolean}true" 
						eaem-show-on-collapse="EAEM.showProductName"
						fieldLabel="benefits.heading">
						<field 
							jcr:primaryType="nt:unstructured"
							sling:resourceType="granite/ui/components/coral/foundation/container"
							name="./benefitsList">
							<items jcr:primaryType="nt:unstructured">
								<column
									granite:class="foundation-layout-util-maximized-alt coral-Form-fieldwrapper"
									jcr:primaryType="nt:unstructured"
									sling:resourceType="granite/ui/components/coral/foundation/container">
									<items jcr:primaryType="nt:unstructured">
										<heading
                							granite:class="att-dialog-heading"
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/heading"
											level="{Long}4" 
											text="plan.benefit"/>
										<text 
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
											fieldLabel="text" 
											required="{Boolean}true"
											name="./itemText"/>
										<icons 
											jcr:primaryType="nt:unstructured"
											sling:resourceType="acs-commons/components/authoring/graphiciconselect"
											fieldLabel="icons" 
											name="./itemIcon"
											required="{Boolean}true">
											<datasource 
												jcr:primaryType="nt:unstructured"
												sling:resourceType="acs-commons/components/utilities/genericlist/datasource"
												path="/etc/acs-commons/lists/font-awesome-icons"/>
										</icons>
									</items>
								</column>
							</items>
						</field>
					</multifield>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
